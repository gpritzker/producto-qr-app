<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Listado de DJCs</h1>
    <%= link_to 'Nuevo DJC', new_djc_path, class: 'btn btn-success' %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Descripción del Producto</th>
          <th>Dirección Legal</th>
          <th>Fabricante</th>
          <th>Empresa</th>
          <th>CRs</th>
          <th>Rol</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if @djcs.size.zero? %>
          <tr><td colspan="8" class="text-center text-muted">Aún no hay DJCs.</td></tr>
        <% end %>
        <% @djcs.each do |djc| %>
          <tr>
            <td><%= djc.id %></td>
            <td><%= djc.product_description %></td>
            <td><%= djc.legal_address %></td>
            <td><%= djc.manufacturer %></td>
            <td><%= djc.company.name %></td>
            <td><%= djc.crs_files.count %></td>
            <td>
              <span class="badge bg-info">
                <% unless current_user.admin? %>
                  <%= Role.role_name(djc.user_role) %>
                <% else %>
                  ADMINISTRADOR
                <% end %>
              </span>
            </td>
            <td>
              <div class="d-flex gap-2">
                <%= link_to djc_path(djc), class: 'btn btn-primary btn-sm mx-1', target: '_blank' do %>
                  <i class="bi bi-eye"></i>
                <% end %>
                <% unless current_user.admin? %>
                  <% if djc.can_approve? && 
                        (djc.user_role == Role::ROL_SUPERVISOR || djc.user_role == Role::ROL_APODERADO)
                  %>
                    <button type="button" class="btn btn-sm btn-success" onclick="approve(<%= djc.id %>)">
                      <i class="bi bi-check-circle"></i>
                    </button>
                  <% end %>
                  <% if djc.can_sign? && djc.user_role == Role::ROL_APODERADO %>
                    <button type="button" class="btn btn-sm btn-success" onclick="sign(<%= djc.id %>)">
                      <i class="bi bi-pen"></i>
                    </button>
                  <% end %>
                <% end %>
                <%= link_to certificados_djc_path(djc), class: 'btn btn-outline-primary btn-sm mx-1' do %>
                  <i class="bi bi-upload"></i>
                <% end %>
                
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  async function approve(djcId) {
    try {
      url = "<%= approve_api_v1_djc_url(id: "__ID__") %>";
      response = await fetch(url.replace('__ID__', djcId), {
        method: "PUT",
        headers: {
          'Content-Type': 'application/json'
        }
      });
      if (!response.ok) {
        const errorMessage = await response.json();
        if(errorMessage.hasOwnProperty("messages")) {
          ul = $("<ul></ul>");
          $.each( errorMessage.messages, function( index, value ) {
            ul.append($("<li></li>").html(value))
          });
        }
        else {
          ul = errorMessage.message;
        }
        $("#responses").removeClass().addClass("alert alert-danger").html(ul);
      } else {
        const data = await response.json();
        $("#responses").removeClass().addClass("alert alert-success").html("DJC aprobada exitosamente");
      }
    } catch(error) {
      console.error('Error al aprobar DJC:', error);
    }
  }
  async function sign(djcId) {
    try {
      url = "<%= sign_api_v1_djc_url(id: "__ID__") %>";
      response = await fetch(url.replace('__ID__', djcId), {
        method: "PUT",
        headers: {
          'Content-Type': 'application/json'
        }
      });
      if (!response.ok) {
        const errorMessage = await response.json();
        if(errorMessage.hasOwnProperty("messages")) {
          ul = $("<ul></ul>");
          $.each( errorMessage.messages, function( index, value ) {
            ul.append($("<li></li>").html(value))
          });
        }
        else {
          ul = errorMessage.message;
        }
        $("#responses").removeClass().addClass("alert alert-danger").html(ul);
      } else {
        const data = await response.json();
        $("#responses").removeClass().addClass("alert alert-success").html("DJC firmada exitosamente");
      }
    } catch(error) {
      console.error('Error al firmar DJC:', error);
    }
  }
</script>
