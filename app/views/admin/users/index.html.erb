<h1>Gestión de Usuarios</h1>
<%= link_to 'Crear nuevo usuario', new_admin_user_path, class: 'btn btn-primary' %>

<table class="table table-striped mt-4">
  <thead>
    <tr>
      <th>Email</th>
      <th>Nombre Completo</th>
      <th>Empresa</th>
      <th>Cargo</th>
      <th>Teléfono</th>
      <th>Admin</th>
      <th>Cuil</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.bussiness %></td> <!-- Muestra la empresa si existe -->
        <td><%= user.position %></td>
        <td><%= user.phone %></td>
        <td><%= user.admin? ? 'Sí' : 'No' %></td>
        <td><%= user.cuil %></td>
        <td>
          <%= link_to 'Editar', edit_admin_user_path(user), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Eliminar', admin_user_path(user), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>