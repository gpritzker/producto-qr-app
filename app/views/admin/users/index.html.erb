<h1>Gestión de Usuarios</h1>

<div class="mb-3">
  <%= link_to 'Crear nuevo usuario', new_admin_user_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Email</th>
      <th>Administrador</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin? ? 'Sí' : 'No' %></td>
        <td>
          <%= link_to 'Editar', edit_admin_user_path(user), class: 'btn btn-warning btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>