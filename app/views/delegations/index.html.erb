<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Delegaciones</h1>
    <!-- Espacio para un botón adicional si se requiere en el futuro -->
  </div>

  <% unless current_user.can_by_supervisor? %>
    <div class="alert alert-info d-flex justify-content-between align-items-center" role="alert">
      <span>Debe completar los datos para ser supervisor (requiere: CUIL y DNI).</span>
      <%= link_to 'Editar', edit_admin_user_path(current_user), class: "btn btn-primary btn-sm" %>
    </div>
  <% end %>
  <% unless current_user.can_by_apoderado? %>
    <div class="alert alert-info d-flex justify-content-between align-items-center" role="alert">
      <span>Debe completar datos para ser apoderado (requiere: CUIL, firma y DNI).</span>
      <%= link_to 'Editar', edit_admin_user_path(current_user), class: "btn btn-primary btn-sm" %>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Compañía</th>
          <th>Correo Electrónico</th>
          <th>Estado</th>
          <th>Rol</th>
          <th>Fecha de Creación</th>
          <th>Fecha de Actualización</th>
          <th class="text-center">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if @delegations.present? %>
          <% @delegations.each do |delegation| %>
            <tr>
              <td><%= delegation.company.name %></td>
              <td><%= delegation.email %></td>
              <td>
                <span class="badge <%= delegation.status == 'waiting' ? 'bg-warning text-dark' : 'bg-success' %>">
                  <%= delegation.status.capitalize %>
                </span>
              </td>
              <td>
                <%= delegation.role == Role::ROL_SUPERVISOR ? 
                      '<span class="badge bg-primary">Supervisor</span>'.html_safe : 
                      '<span class="badge bg-info">Apoderado</span>'.html_safe %>
              </td>
              <td><%= delegation.created_at.strftime("%d-%m-%Y %H:%M") %></td>
              <td><%= delegation.updated_at.strftime("%d-%m-%Y %H:%M") %></td>
              <td class="text-center">
                <button type="button" class="btn btn-sm btn-success me-2">
                  <i class="bi bi-check-circle"></i> Aceptar
                </button>
                <button type="button" class="btn btn-sm btn-danger">
                  <i class="bi bi-x-circle"></i> Rechazar
                </button>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="text-center text-muted">
              Aún no hay delegaciones.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
