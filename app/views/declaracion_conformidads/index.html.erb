<h1 class="my-4">Listado de Declaraciones de Conformidad</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Reglamento Técnico</th>
      <th>Tipo de Procedimiento</th>
      <th>Número de Reporte</th>
      <th>Emisor</th>
      <th>Fecha de Emisión</th>
      <th>Estado</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @declaracion_conformidads.each do |declaracion_conformidad| %>
      <tr>
        <td><%= declaracion_conformidad.product.name %></td>
        <td><%= declaracion_conformidad.reglamento_tecnico.nombre %></td>
        <td><%= declaracion_conformidad.tipo_procedimiento.nombre %></td>
        <td><%= declaracion_conformidad.numero_reporte %></td>
        <td><%= declaracion_conformidad.emisor_reporte %></td>
        <td><%= declaracion_conformidad.fecha_emision.strftime('%d/%m/%Y') %></td>
        <td><%= declaracion_conformidad.estado.capitalize %></td>
        <td>
          <%= link_to "Ver", declaracion_conformidad_path(declaracion_conformidad), class: "btn btn-info btn-sm" %>
          <%= link_to "Editar", edit_declaracion_conformidad_path(declaracion_conformidad), class: "btn btn-primary btn-sm" %>
          <%= link_to "Eliminar", declaracion_conformidad, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nueva Declaración de Conformidad", new_declaracion_conformidad_path, class: "btn btn-success mt-3" %>