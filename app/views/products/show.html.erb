<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg p-4">
        <div class="card-body text-center">
          <h1 class="card-title display-4 mb-4"><%= @product.name.capitalize %></h1>
          <p class="card-text lead">
            <strong>Descripci√≥n:</strong> <%= @product.description %>
          </p>
          <p class="card-text mb-4">
            <strong>Precio:</strong> <span style="font-size: 1.5em; color: #007bff;"><%= number_to_currency(@product.price) %></span>
          </p>

          <div class="qr-container mt-4">
            <% if @product.persisted? %>
              <div class="d-flex justify-content-center">
                <%= raw(@svg) %> <!-- QR centrado -->
              </div>
            <% end %>
          </div>

          <div class="back-link mt-4">
            <%= link_to 'Volver', products_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
