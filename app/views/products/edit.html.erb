<h1 class="text-center mb-4">Editar Producto</h1>

<div class="container">
  <%= form_with model: @product, local: true do |form| %>
    <% if @product.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@product.errors.count, "error") %> impidió que el producto fuera guardado:</h4>
        <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, placeholder: "Ingrese el nombre del producto", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, placeholder: "Ingrese una descripción", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :price, class: "form-label" %>
      <%= form.number_field :price, placeholder: "Ingrese el precio", class: "form-control" %>
    </div>

    <div class="d-flex gap-2">
      <%= form.submit "Guardar cambios", class: "btn btn-primary" %>
      <%= link_to 'Volver', products_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>