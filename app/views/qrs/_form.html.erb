<%= form_with(model: qr) do |form| %>
  <% if qr.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(qr.errors.count, "error") %> prohibited this qr from being saved:</h2>

      <ul>
        <% qr.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, require: true %>
  </div>

  <div>
    <%= form.label :alias, style: "display: block" %>
    <%= form.text_field :alias, require: true %>
  </div>

  <div>
    <%= form.label :origin, style: "display: block" %>
    <%= form.text_field :origin, require: true %>
  </div>

  <%= form.label :company %>
  <%= form.collection_select :company_id, current_user.companies, :id, :name, { prompt: "Selecciona una empresa" } %>

  <!-- Acciones -->
  <div class="actions mt-4">
    <%= form.submit qr.new_record? ? "Crear QR" : "Guardar Cambios", class: "btn btn-primary btn-lg" %>
    <%= link_to 'Cancelar', qrs_path, class: 'btn btn-secondary btn-lg ml-3' %>
  </div>
<% end %>
