<p class="alert alert-success"><%= notice %></p>

<h1 class="my-4">Listado de Empresas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Razón Social</th>
      <th>CUIT</th>
      <th>Domicilio Legal</th>
      <th>Apoderado</th>
      <th>Contacto</th>
      <th>Estado</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.razon_social %></td>
        <td><%= empresa.CUIT %></td>
        <td><%= empresa.domicilio_legal %></td>
        <td><%= empresa.apoderado_nombre %> (CUIL: <%= empresa.apoderado_CUIL %>)</td>
        <td><%= empresa.apoderado_contacto %></td>
        <td><%= empresa.estado %></td>
        <td>
          <%= link_to "Ver", empresa_path(empresa), class: "btn btn-info btn-sm" %>
          <%= link_to "Editar", edit_empresa_path(empresa), class: "btn btn-primary btn-sm" %>
          <%= link_to "Suspender", empresa_path(empresa), method: :delete, data: { confirm: "¿Estás seguro de suspender esta empresa?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nueva Empresa", new_empresa_path, class: "btn btn-success mt-3" %>