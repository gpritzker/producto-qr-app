  <button 
    type="button" 
    class="close position-absolute" 
    onclick="cleanApiResponse()" 
    data-dismiss="alert" 
    aria-label="Close"
    style="top: 5px; right: 10px;">
    <span aria-hidden="true">Ã—</span>
  </button>
  <span id="responsesBlock_messages"></span>
