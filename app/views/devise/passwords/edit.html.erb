<!-- app/views/devise/passwords/edit.html.erb -->

<h2>Cambiar tu contraseña</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'password-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "Nueva contraseña", class: 'control-label' %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">(Mínimo <%= @minimum_password_length %> caracteres)</small>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: 'control-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Cambiar mi contraseña", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>