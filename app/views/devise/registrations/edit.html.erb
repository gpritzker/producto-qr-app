<!DOCTYPE html>
<html>
<head>
  <title>Editar Perfil | QAR</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>

<div class="container mt-5">
  <h2 class="text-center">Editar Perfil</h2>
  
  <% if resource.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card mx-auto" style="max-width: 500px;">
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
        
        <!-- Campo de Nombre Completo -->
        <div class="form-group">
          <%= f.label :nombre_completo, "Nombre Completo" %>
          <%= f.text_field :nombre_completo, class: "form-control", placeholder: "Nombre Completo", value: resource.nombre_completo %>
        </div>
        
        <!-- Campo de Empresa -->
        <div class="form-group">
          <%= f.label :empresa, "Empresa" %>
          <%= f.text_field :empresa, class: "form-control", placeholder: "Empresa", value: resource.empresa %>
        </div>

        <!-- Campo de Cargo -->
        <div class="form-group">
          <%= f.label :cargo, "Cargo" %>
          <%= f.text_field :cargo, class: "form-control", placeholder: "Cargo", value: resource.cargo %>
        </div>

        <!-- Campo de Teléfono -->
        <div class="form-group">
          <%= f.label :telefono, "Teléfono" %>
          <%= f.telephone_field :telefono, class: "form-control", placeholder: "Teléfono", value: resource.telefono %>
        </div>

        <!-- Campo de Correo Electrónico -->
        <div class="form-group">
          <%= f.label :email, "Correo Electrónico" %>
          <%= f.email_field :email, class: "form-control", placeholder: "correo@ejemplo.com", value: resource.email %>
        </div>

        <!-- Campo de Contraseña (opcional) -->
        <div class="form-group">
          <%= f.label :password, "Nueva Contraseña (opcional)" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">(<%= @minimum_password_length %> caracteres mínimo)</small>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Nueva Contraseña" %>
        </div>

        <!-- Campo de Confirmación de Contraseña (opcional) -->
        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmación de Nueva Contraseña" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmar Nueva Contraseña" %>
        </div>

        <div class="text-center">
          <%= f.submit "Actualizar Perfil", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <%= link_to "Cancelar", root_path, class: "text-secondary" %>
      </div>
    </div>
  </div>
</div>

</body>
</html>